/**index.wxss**/
page {
  background-color: #f5f5f9;
}

.input {
  padding: 16rpx;
}

input {
  background-color: #eeeeee;
  text-align: center;
  padding: 10rpx;
  border-radius: 8rpx;
}

.container-inner {
  display: flex;
  flex-direction: row-reverse;
}

.serachLetter {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  width: 80rpx;
  height: 100vh;
  position: fixed;
  left: 0;
  color: #c60a0d;
}

.serachLetter view {
  margin-top: 20rpx;
  height: 30rpx;
}

.touchClass {
  background-color: #ffffff;
  font-size: 20rpx;
}

.thisHot {
  word-wrap: break-word;
  /* word-break:break-all;
  overflow: hidden; */
  width: 40rpx;
  margin: 0 auto;
}

.showSlectedLetter {
  background-color: #000000;
  color: #ffffff;
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  font-size: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
  /* display: none;
  opacity: 0; */
}

.fadeIn{
  animation: fadeIn 1s  ;
  animation-fill-mode:forwards;
}

@keyframes fadeIn {
  0% {
    display: none;
    opacity: 0;
  }
  1% {
    display: block;
    opacity: 0;
  }
  50% {
    display: block;
    opacity: 1;
  }
  100%{
    display: none;
    opacity: 0;
  }
}


