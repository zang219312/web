/* 遮罩层 */
.coverView{
  width:100%;
  height:100%;
  position:fixed;
  background-color:rgba(0,0,0,0.8);
  z-index:9999;
  top:0;
  left:0;
  text-align: center;
}
.remindShare{
  position: relative;
  overflow: hidden;
  display: inline-block;
  padding: 150rpx 0 0 0;
}
.remindShare>view{
  float: left;
  color: #999;
  font-size: 24rpx;
}
.remshare-left image{
  width: 150rpx;
  height: 180rpx;
}
.remshare-right{
  width: 310rpx;
  text-align: left;
  margin:50rpx 0 0 20rpx;
}
.remshare-right image{
  width: 90rpx;
  height: 80rpx;
  vertical-align:middle;
}
.share-topimg{
  position: absolute;
  right: 40rpx;
  top: 70rpx;
  width: 140rpx;
  height: 150rpx;
}


