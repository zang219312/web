  display: flex;
  align-items: stretch;
  border-bottom: 1rpx solid #e0e0e0;
}
.articleCell_BG_left{
  width: 466rpx;
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  /* background-color: cornsilk; */
}
.articleCell_BG_left_top{
  font-size: 32rpx;
  color: #333333;
  margin: 10rpx;
  line-height: 60rpx;

}
.articleCell_BG_left_bottom{
  display: flex;
  justify-content: space-between;

}
.recommendSign{
  border-radius: 5rpx;
  border: 1rpx solid #ff6f05;
  width: 80rpx;
  height: 40rpx;
