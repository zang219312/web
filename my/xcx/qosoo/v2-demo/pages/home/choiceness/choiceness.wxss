  margin-top: 4rpx;

  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.articleCell_publicTime{
  width: 160rpx;
	line-height: 40rpx;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
