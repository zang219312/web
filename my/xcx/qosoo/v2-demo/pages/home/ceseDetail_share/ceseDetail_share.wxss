/* pages/home/caseDetail/caseDetail.wxss */

.articleTitleBG{
  width: 100%;
  height: 100rpx;
  display: flex;
}
.articleTitle{
  width: 500rpx;
	height: 100rpx;
	font-size: 36rpx;
	line-height: 100rpx;
	letter-spacing: 0rpx;
	color: #333333;
  /* margin: 40rpx 30rpx 20rpx; */
  margin-left: 30rpx;
}
.signBGView{
  /* background-color: #f5f5f5; */
  width: 150rpx;
  height: 100rpx;
  position: absolute;
  right: 10rpx;
  margin-top: 10rpx;
}
.signItemBG{
  display: inline-block;
  margin-left: 20rpx;
}
.signImg{
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx; 
}
.signTitle{
  width: 50rpx;
  height: 24rpx;
  font-size: 24rpx;
  color: #999;
}
/* 发布时间 */
.publishTimeBG{
  margin-top: 20rpx;
  width: 100%;
  line-height: 40rpx;
  display: flex;
}
.recommendSign{
  margin-left: 20rpx;
  width: 80rpx;
  height: 100%;
  text-align: center;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ff6f05;
  border: 1rpx solid #ff6f05;
  border-radius: 6rpx;
}
.subTitle{
  width: 500rpx;
	height: 100%;
  margin-left: 20rpx;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 40rpx;
	letter-spacing: 0px;
	color: #999999;
}

.publishTime{
  position: absolute;
  top: 120rpx;
  right: 30rpx;

	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #999999;
  margin-left: 30rpx;
} 
/* 图片 */

.articleImage{
  margin: 20rpx 30rpx;
  width: 690rpx;
  height: 320rpx;
}
.articleContent{
  width: 690rpx;
  margin: 30rpx;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 40rpx;
	letter-spacing: 0rpx;
	color: #666666;
}