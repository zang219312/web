/* pages/proframe/proframe.wxss */

.divimg {
  width: 49.4%;
  height: 340rpx;
  margin: 1rpx;
  float: left;
  overflow: hidden;
  display: block;
  position: relative;
  z-index: 1;
}

.divimg image {
  z-index: 2;
  position: absolute;
  border: 0px;
  padding: 0px;
  margin: 0px;
  outline: none;
  left: 0px;
}

.qr_yes {
  position: absolute;
  z-index: 3;
  right: 0;
  bottom: 0;
}

.order-action {
  border-top: 1px solid #dbdbdb;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.btn_r {
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  float: right;
}

.btn_l {
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  float: left;
}

.text_r {
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  padding-right: 150rpx;
}
