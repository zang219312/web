/* pages/goodsDetail/goodsDetail.wxss */

.banner, .banner-item {
  width: 100%;
  height: 500rpx;
}

.goods-detail {
  padding: 70rpx 40rpx 110rpx;
}

.goods-info {
  padding-bottom: 50rpx;
  border-bottom: 1rpx solid #dbdbdb;
}

.goods-info .info-left {
  position: relative;
  width: 295rpx;
  padding-right: 20rpx;
}

.goods-info .info-left::after {
  position: absolute;
  top: 0;
  right: 0;
  height: 95%;
  width: 1px;
  background: #dbdbdb;
  content: "";
}

.goods-info .info-tle {
  font-size: 28rpx;
  font-weight: 700;
}

.goods-info .info-price {
  font-size: 44rpx;
  font-weight: 700;
}

.info-right {
  width: 290rpx;
}

.clearfix::before, .clearfix::after {
  content: "";
  display: table;
}

.clearfix::after {
  clear: both;
}

.fl {
  float: left;
}

.goods-info .info-right {
  display: inline-block;
  padding-left: 30rpx;
  font-size: 24rpx;
  color: #828282;
}

.goods-mod {
  margin-top: 30rpx;
}

.flex-s-b {
  display: flex;
  justify-content: space-between;
}

.goods-mod .mod-label {
  width: 120rpx;
  font-size: 24rpx;
  color: #828282;
}

.sku-list {
  text-align: right;
}

.sku-item {
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 35rpx;
  margin: 0 0 15rpx 15rpx;
  color: #888;
  border: 1px solid #888;
  border-radius: 50rpx;
}

.sku-item.active {
  color: #111;
  border-color: #111;
}

.sku-list--vertical .sku-item {
  display: block;
  margin: 0 0 15rpx 0;
}

.goods-action {
  margin-top: 50rpx;
  padding-top: 50rpx;
  border-top: 1px solid #dbdbdb;
}
