/**index.wxss**/

page {
  height: 100%;
}

.banner, .banner-item {
  width: 100%;
  height: 750rpx;
}

.plate {
  height: 240rpx;
  background: #fff;
}

.plate-item {
  float: left;
  width: 187.5rpx;
  height: 187.5rpx;
  line-height: 187.5rpx;
  margin: 18rpx auto;
}

.plate-img {
  width: 130rpx;
  height: 130rpx;
  margin: 28rpx auto;
  position: relative;
}

.plate-img image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.plate-info {
  position: relative;
  width: 120rpx;
  bottom: 95rpx;
  left: 30rpx;
  text-align: center;
  vertical-align: middle;
}

.text {
  font-size: 30rpx;
  font-family: '微软雅黑';
}

.app-title {
  font-size: 40rpx;
  font-weight: bolder;
  font-family: '微软雅黑';
  border-left: 10rpx solid #1aad19;
  margin: 20rpx;
  text-indent: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.app-moduler:nth-child(odd) {
  float: left;
}

.app-moduler:nth-child(even) {
  float: right;
}

.content {
  padding-bottom: 20rpx;
  box-sizing: border-box;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.clear {
  display: flex;
  flex-direction: column;
  height: 10rpx;
  background: #eee;
}

.mod-img {
    width: 100%;
    height: 300rpx;
}

.mod-image {
    width: 100%;
    height: 300rpx;
}

.mod-item {
    width: 45%;
    float: left;
    margin-left: 25rpx;
    margin-top: 40rpx;
    position: relative;
}


