
input::-webkit-input-placeholder {
    color: #999;
}

/*file样式*/

#file_input {
    position: absolute;
    font-size: 10px;
    left: 0;
    top: 0;
    opacity: 0;
    filter: alpha(opacity=0);
    cursor: pointer
}

#file_text{
    color: #999999;
}

#file_btn{
    display: block;
    width: 20%;
    height: 100%;
    position: relative;
    border: none;
    background: none;
    z-index: 99;
}
#file_btn>img{
    width: 16px;
    height: 16px;
}

.body {
    background-color: #f5f5f5;

}

.input_style {
    width: 100%;
    background-color: #FFF;
    padding-left: 10px;
    margin-top: 10px;
    box-sizing: border-box;
}

.important {
    width: 10px;
    color: #ff6f05;
    text-align: center;
    margin-right: 5px;
}

.input_style_box {
    width: 100%;
    height: 46px;
    display: flex;
    align-items: center;
    position: relative;
    border-bottom: 1px solid #ededed;
}

.input_style_box > p {
    width: 36%;
    margin-left: 10px;
    display: flex;
    font-size: 14px;
    align-items: center;
}
.input_style_box>div{
    width: 100%;
    height: 100%;
    font-size: 14px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.input_style_box>div>button{
    margin-right: 10px;
}

.input_style_box > input {
    height: 100%;
    width: 100%;
    border: none;
    font-size: 14px;
    outline: none;
}

.outlogin {
    width: 100%;
    height: 46px;
    font-size: 14px;
    line-height: 46px;
    text-align: center;
    background-color: #FFF;
    margin-top: 10px;
    margin-bottom: 30px;
}
