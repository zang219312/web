/* 导航栏 */

.home_nav {
  height: 136rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}

.home_nav  .scanicon {
  width: 22rpx;
  height: 38rpx;
  margin-top: 81rpx;
  margin-left: 42rpx;
  z-index: 9;
}

.home_nav  image {
  position: absolute;
  left: 0;
  top: 0;
}

.home_nav view {
  width: 180rpx;
  font-size: 32rpx;
  color: #fff;
  margin: 76rpx;
  position: absolute;
}

.home_nav  .head_bg_img {
  width: 100%;
  height: 136rpx;
}

/*  */

.articleCell_BG {
  width: 690rpx;
  /*height: 222rpx;*/
  display: flex;
  border-bottom: 1rpx solid rgba(216, 216, 216, 0.3);
  margin: 0 auto;
  padding: 25rpx 0;
}

.articleCell_BG_left {
  width: 434rpx;
  height: 100%;
  margin-left: 30rpx;
}

.articleCell_BG_left_top {
  font-size: 32rpx;
  color: #353535;
  width: 100%;
  height: 92rpx;
  /* margin: 20rpx; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 48rpx;
}

.articleCell_BG_left_bottom {
  display: flex;
  margin-top: 40rpx;
  font-size: 24rpx;
}

.recommendSign {
  border-radius: 3rpx;
  width: 58rpx;
  height: 30rpx;
  text-align: center;
  background: rgba(255, 0, 39, 1);
  margin-top: 6rpx;
  margin-right: 20rpx;
}

.recommendSign view {
  /* width: 40rpx; */
  line-height: 30rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.articleCell_companyName {
  width: 240rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #888;
  /* margin-left: 20rpx; */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.articleCell_publicTime {
  flex: auto;
  /* float: right; */
  width: 88rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #b2b2b2;
  text-align: right;
}
.articleCell_BG_right {
  width: 224rpx;
  box-sizing: border-box;
  align-self: center;
  /* background-color: seashell; */
}

.articleCell_image {
  width: 224rpx;
  height: 150rpx;
  border-radius: 8rpx;
  /* margin-right: 20rpx; */
}

