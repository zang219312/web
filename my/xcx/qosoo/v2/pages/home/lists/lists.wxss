.item-bottom-info>view {
  width: 100rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  border-radius: 8rpx;
  border: 2rpx solid rgba(250, 109, 33, 1);
  color: #fa6d21;
}

.item-bottom-info>view.focused {
