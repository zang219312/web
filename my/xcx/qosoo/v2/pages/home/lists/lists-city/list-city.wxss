/* pages/home/lists/lists-city/list-city.wxss */

/* 导航栏 */

.home_nav {
  height: 136rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}

.home_nav  .scanicon {
  width: 22rpx;
  height: 38rpx;
  margin-top: 81rpx;
  margin-left: 42rpx;
  z-index: 9;
}

.home_nav  image {
  position: absolute;
  left: 0;
  top: 0;
}

.home_nav view {
  width: 180rpx;
  font-size: 32rpx;
  color: #fff;
  margin: 76rpx;
  position: absolute;
}

.home_nav  .head_bg_img {
  width: 100%;
  height: 136rpx; /* 64px*/
}

/* 导航栏 */

.now-see {
  margin: 40rpx 30rpx;
  color: #353535;
  font-size: 32rpx;
  font-weight: 500;
}

.container-inner {
  display: flex;
  flex-direction: row-reverse;
}

.container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
  width: 720rpx;
}

input {
  text-align: center;
  font-size: 26rpx;
  padding: 5px;
  background-color: #f5f5f5;
  width: 692rpx;
  height: 64rpx;
  line-height: 64rpx;
  margin: 50rpx auto;
  border-radius: 42rpx;
}

.searchLetter {
  flex-shrink: 0;
  width: 30rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  color: #666;
}

.searchLetter view {
  margin-top: 10rpx;
}

.touchClass {
  background-color: #fff;
  color: #fff;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
}

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 10rpx;
}

.selectCity {
  padding: 16rpx;
  background-color: #f5f5f5;
  margin-bottom: -10rpx;
}

.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 40rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.item_city {
  display: flex;
  background-color: #fff;
  height: 100rpx;
  padding-left: 34rpx;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  font-size: 24rpx;
  color: #666;
}

.hotcity-common {
  font-size: 32rpx;
  color: #888;
  padding-bottom: 0;
  margin: 8rpx 0;
  margin-left: 16rpx;
}

.hotCity {
  padding-right: 50rpx;
  margin: auto;
}

.thisCityName {
  display: inline-block;
  /* border: 1rpx solid #FEC240; */
  border-radius: 8rpx;
  padding: 10rpx 0;
  font-size: 28rpx;
  color: #353535;
  text-align: center;
  min-width: 149.5rpx;
  margin: 16rpx 0;
  background: #fff;
}

.thishotText {
  color: #fec240;
  font-size: 20rpx;
  margin: 0 !important;
}

.slectCity {
  border-color: #fec240 !important;
}

.slectCity view {
  color: #fec240 !important;
}

.weui-grid {
  padding: 10rpx 0;
  width: 200rpx;
  box-sizing: border-box;
  border: 1rpx solid #ececec;
  border-radius: 8rpx;
  background-color: white;
  margin: 8rpx 0;
}

.weui-grids {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-top: 0rpx solid #d9d9d9;
  border-left: 0rpx solid #d9d9d9;
}

.weui-grid__label {
  display: block;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-top: 0;
}

.ul {
  display: block;
  color: grey;
  padding-left: 20rpx;
  background: #f5f5f5;
  margin-bottom: 40rpx;
}

.li {
  display: block;
  font-weight: 100;
  font-size: 28rpx;
  padding: 16rpx 0;
}

.county {
  display: flex;
  flex-wrap: wrap;
}
